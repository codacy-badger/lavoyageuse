<% if user.validated_host? || current_user.moderator %>
  <%= link_to user_path(user) do %>
    <%= render "profile_card_to_click", user:user %>
    <%= render "profile_card_filter", user: user %>
  <% end %>
<% else %>
  <%= render "profile_card_to_click", user:user %>
  <div class="profile-card-filter">
    <h5><strong><%= t('.coming_soon') %></strong></h5>
    <h6><%= t('.hint') %></h6>
  </div>
<% end %>
