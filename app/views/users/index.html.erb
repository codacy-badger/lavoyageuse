<div class="container-fluid mosaic">
  <div class="row">
    <% if @map && !moderation %>
      <div class="col-12 col-md-7">
        <%= render "mosaic" %>
      </div>
      <div class="d-none d-md-block col-md-5 no-padding">
        <%= render "shared/map" %>
      </div>
    <% else %>
      <div class="col-12">
        <%= render moderation ? "mosaic_moderate" : "mosaic" %>
      </div>
    <% end %>
  </div>
</div>

