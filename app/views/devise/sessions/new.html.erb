<div class="flex-parent"> <!-- for IE bug -->
  <div class="fullscreen under-navbar relative flexbox text-left" style="background-image: linear-gradient(0deg, rgba(10,10,10,0.5) 0%, rgba(10,10,10,0.5) 100%), url(https://res.cloudinary.com/dfcsmghw4/image/upload/v1537431320/illustrations/photo-1507608869274-d3177c8bb4c7.jpg)">
    <div class="form_login">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login-box">
          <div class="login-fields-small">
            <h3><%= t('devise.sessions.new.sign_in') %></h3>

            <%= f.input :email, required: false, autofocus: true%>
            <%= f.input :password, required: false %>
            <label class="checkbox margin-bottom-medium">
              <input value="0" type="hidden" name="user[remember_me]">
              <input type="checkbox" class="boolean optional" checked="checked" id="user_remember_me" name="user[remember_me]" value="1" />
              <label for="user_remember_me"><%= t('.remember_me') %></label>
            </label>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, t('.sign_in'), class:"margin-bottom-small" %>
            <p><%= render "devise/shared/links" %></p>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>
